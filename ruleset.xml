<?xml version="1.0"?>
<ruleset name="WLP">
	<description>A coding standard for WLP.</description>
	
	<rule ref="Zend"></rule>

	<!-- Lines can be 120 chars long, show errors at 120 chars -->
	<rule ref="Generic.Files.LineLength">
		<properties>
			<property name="lineLimit" value="120"/>
			<property name="absoluteLineLimit" value="120"/>
		</properties>
	</rule>
</ruleset>
